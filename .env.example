# ===================
# PostgreSQL
# ===================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edugo_dev
DB_USER=edugo
DB_PASSWORD=changeme
DB_SSL_MODE=disable

# Connection string (generado automáticamente, pero puedes sobreescribir)
# DATABASE_URL=postgres://edugo:changeme@localhost:5432/edugo_dev?sslmode=disable

# ===================
# MongoDB
# ===================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=edugo

# Connection string (generado automáticamente, pero puedes sobreescribir)
# MONGO_URI=mongodb://localhost:27017/edugo

# ===================
# RabbitMQ
# ===================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Connection string (generado automáticamente, pero puedes sobreescribir)
# RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# ===================
# Redis (Opcional)
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379

# Connection string
# REDIS_URL=redis://localhost:6379

# ===================
# Herramientas de Desarrollo
# ===================

# PgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@edugo.com
PGADMIN_PASSWORD=changeme

# Mongo Express
MONGO_EXPRESS_PORT=8082
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=changeme

# ===================
# JWT (para APIs)
# ===================
JWT_SECRET=your-secret-key-at-least-32-characters-long-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===================
# OpenAI (para worker)
# ===================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===================
# AWS S3 (para almacenamiento de archivos)
# ===================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=edugo-materials-dev

# ===================
# Logging
# ===================
LOG_LEVEL=debug
LOG_FORMAT=json

# ===================
# Environment
# ===================
ENVIRONMENT=local
